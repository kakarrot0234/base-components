{
    "compilerOptions": {
        "outDir": "build",
        "target": "ES6",
        "module": "CommonJS",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*", "src/_devTest",
    ],
    "exclude": [
        "node_modules"
    ]
}