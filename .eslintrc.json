{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "parserOptions": {
        "project": ["./tsconfig.json"]
    },
    "overrides": [
      {
        "files": ["*.ts"],
        "rules": {
            "indent": ["error", 2],
            "@typescript-eslint/no-non-null-assertion": ["off"]
        }
      }
    ],
    "ignorePatterns": [
        "webpack.*.js"
    ]
}